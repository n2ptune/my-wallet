{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "isolatedModules": false,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
